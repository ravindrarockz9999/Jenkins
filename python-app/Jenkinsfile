pipeline {
    agent any
    
    triggers {
        githubPush()
    }
    
    stages {
        stage('Debug Environment') {
            steps {
                sh '''
                    echo "=== Basic System Check ==="
                    echo "Current directory: $(pwd)"
                    echo "Who am I: $(whoami)"
                    echo "Listing files:"
                    ls -la
                    echo "Docker check:"
                    docker --version
                    echo "=== End Debug ==="
                '''
            }
        }
    }
}
