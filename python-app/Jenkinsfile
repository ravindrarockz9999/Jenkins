pipeline {
    agent any
    
    triggers {
        githubPush()
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Test Docker Build') {
            steps {
                sh '''
                    echo "Checking for Dockerfile..."
                    if [ -f Dockerfile ]; then
                        echo "Dockerfile found. Building..."
                        docker build -t test-image .
                        echo "✅ Build successful!"
                    else
                        echo "❌ ERROR: No Dockerfile found!"
                        exit 1
                    fi
                '''
            }
        }
    }
}
